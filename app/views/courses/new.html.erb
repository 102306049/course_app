<h2>New Course</h2>
<%= form_for  @course  do |f|%>

<div>
	Class title
	<%=f.text_field :title %>
</div>
<div>
	Teacher
	<%=f.text_field :teacher       %>
</div>
<div>
	Class time
	<%=f.text_field :time %>
</div>
<div>
	Class location
	<%=f.text_field :place %>
</div>
<div>
	Total  credits 
	<%=f.text_field :credits %>
</div>


<%=f.submit %>
<%end%>